<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.grp5.controller.BikeReservationController">
    
    <top>
        <VBox spacing="10" styleClass="header">
            <padding>
                <Insets top="20" right="20" bottom="20" left="20"/>
            </padding>
            <Label text="Bike Reservation Management" styleClass="title"/>
        </VBox>
    </top>
    
    <center>
        <VBox spacing="15">
            <padding>
                <Insets top="20" right="20" bottom="20" left="20"/>
            </padding>
            
            <!-- Search Section -->
            <HBox spacing="10" alignment="CENTER_LEFT">
                <Label text="Search Reservation:"/>
                <TextField fx:id="searchField" promptText="Enter Reservation ID"/>
                <Button text="Search" onAction="#handleSearch"/>
            </HBox>
            
            <!-- Table View -->
            <TableView fx:id="reservationTable" VBox.vgrow="ALWAYS">
                <columns>
                    <TableColumn fx:id="colRefNum" text="Ref #" prefWidth="80"/>
                    <TableColumn fx:id="colCustomer" text="Customer" prefWidth="150"/>
                    <TableColumn fx:id="colBike" text="Bike" prefWidth="100"/>
                    <TableColumn fx:id="colBranch" text="Branch" prefWidth="120"/>
                    <TableColumn fx:id="colStartDate" text="Start Date" prefWidth="150"/>
                    <TableColumn fx:id="colEndDate" text="End Date" prefWidth="150"/>
                    <TableColumn fx:id="colStatus" text="Status" prefWidth="100"/>
                </columns>
            </TableView>
            
            <!-- Button Bar -->
            <HBox spacing="10" alignment="CENTER">
                <Button text="Add Reservation" onAction="#handleAdd" styleClass="btn-primary"/>
                <Button text="Update" onAction="#handleUpdate" styleClass="btn-success"/>
                <Button text="Delete" onAction="#handleDelete" styleClass="btn-danger"/>
                <Button text="View Details" onAction="#handleViewDetails" styleClass="btn-info"/>
                <Button text="Back" onAction="#handleBack" styleClass="btn-secondary"/>
            </HBox>
        </VBox>
    </center>
    
</BorderPane>